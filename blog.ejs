<%- include("partials/header"); -%>
<style media="screen">
  html{
    color:#040002;
  }
  .div1{
    text-align:left;
    margin-left:4rem;
    margin-top:3rem;
  }
  h3{
    text-decoration:underline;
    font-size:4vw;
  }
</style>
<div class="div1">
  <h3 ><%= startingContent %></h3>
 <%  posts.forEach(function(post){ %>

 <h2> <%=post.title%> </h2>
 <p class"blog-content">
 <p><%=post.content.substring(0, 100) + " ..."%></p>
   <a href="/posts/<%=post._id%>">Read More</a>
   <br>

 </p>


 <% }) %>
</div>
